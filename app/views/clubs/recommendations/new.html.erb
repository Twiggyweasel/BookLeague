<h1>Recommendations#new</h1>
<p>Find me in app/views/recommendations/new.html.erb</p>

<%= form_for [@club, @recommendation], remote: false do |f| %>
  <%= f.hidden_field :club_id, value: @club.id %>
  <div class="field">
    <%= f.label :book_id, "Book" %>
    <%= f.select :book_id, options_for_select(current_user.books.all.collect { |b| [b.title, b.id]}) %>
    <span>Need to add a book? <%= link_to 'Search', :book_search %> or <%= link_to 'add manually', [:new, :book] %></span>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to "cancel", club_recommendations_path(@club) %>
  </div>  
<% end %>
